{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "ES2022",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": false
    },
    "compileOnSave": true,
    "include": [
        "src/**/*.ts"
    ]
}